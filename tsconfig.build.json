{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "emitDeclarationOnly": true,
    "declarationDir": "./node_modules/dist",
    "declaration": true,
    "rootDir": "./src",
    "outDir": "./node_modules/dist",
    "allowJs": false
  },
  "exclude": [
    "**/*.test.ts",
    "*.test.ts",
    "integration",
    "**/*.d.ts",
    "dist",
    "test-typings"
  ],
  "include": ["src"]
}
